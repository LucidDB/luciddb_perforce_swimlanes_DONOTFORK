<project name="bh" default="simple-test">
  <target name="simple-test">
    <test-suite testunit="simple-test">

      <init-hook>
        <ant target="restoreCatalog"/>
        <ant target="copy-csv"/>
      </init-hook>

      <test name="creschema">
        <sql file="${open.dir}/luciddb/test/sql/bench/gen/${config.prop}/creschema.sql"/>
      </test>

      <test name="importschema" requiresSuccess="creschema">
        <sql file="${open.dir}/luciddb/test/sql/bench/gen/${config.prop}/importschema.sql"/>
      </test>

      <test name="benchload" requiresSuccess="creschema">
        <sql file="${open.dir}/luciddb/test/sql/bench/gen/${config.prop}/benchload.sql"/>
      </test>

      <test name="benchqueries" requiresSuccess="benchload">
        <sql file="${open.dir}/luciddb/test/sql/bench/gen/${config.prop}/benchqueries.sql"/>
      </test>

    </test-suite>
  </target>
</project>
