@thread comp
  set schema 's';

  @sync
    select count(*) from bench1m where "k2"=1;
    select count(*) from bench100k where "k100"=1;
    select count(*) from bench100k where "k100"<20;
    select count(*) from bench100k where "k100"<80;
    select "kseq","k500k" from bench10k where "k500k"<1000;
  @sync
@end

