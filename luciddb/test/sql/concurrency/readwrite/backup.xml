<project name="bh" default="rwconcurrency">
  <target name="rwconcurrency">
    <test-suite name="rwconcurrency">

      <init-hook>
        <test-suite name="init">
          <test-suite-call testfile="${open.dir}/luciddb/test/sql/tinit.xml">
            <test-suite-modifier value="rwconcurrency"/>
          </test-suite-call>
        </test-suite>
        <ant dir="${open.dir}/luciddb/test/sql/concurrency/readwrite" target="copy-big-ref-files"/>
        <ant dir="${open.dir}/luciddb/test/sql/concurrency/readwrite" target="gen-all-sql"/>
        <ant dir="${open.dir}/luciddb/test/sql/concurrency/readwrite" target="create-db"/>
      </init-hook>

      <test name="setup">
        <junit-sql file="${open.dir}/luciddb/test/sql/concurrency/readwrite/gen/${datasize}/setup.sql"/>
      </test>

      <test name="backup" requiresSuccess="setup">
        <junit-sql
          file="${open.dir}/luciddb/test/sql/concurrency/readwrite/gen/${datasize}/backup.mtsql"/>
      </test>

      <test name="restore" requiresSuccess="setup">
        <junit-sql
          file="${open.dir}/luciddb/test/sql/concurrency/readwrite/gen/${datasize}/restore.mtsql"/>
      </test>

      <cleanup-hook>
        <test-suite name="cleanup">
          <test-suite-call testfile="${open.dir}/luciddb/test/sql/tdone.xml">
            <test-suite-modifier value="rwconcurrency"/>
          </test-suite-call>
        </test-suite>
      </cleanup-hook>

    </test-suite>
  </target>
</project>
