create schema rwconcur;
set schema 'rwconcur';

create server ff_server
foreign data wrapper "FLAT FILE"
options(
    directory '@FFDIR@',
    file_extension '.tbl',
    ctrl_file_extension '.bcp',
    field_delimiter '|',
    line_delimiter '\n',
    quote_char '"',
    escape_char '',
    with_header 'no',
    num_rows_scan '1',
    log_directory '@DIR@'
);

import foreign schema "BCP" from server ff_server into rwconcur;

