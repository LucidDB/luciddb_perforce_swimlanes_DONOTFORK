<project name="bh" default="sfdc">
  <target name="sfdc">
    <test-suite name="sfdc">

      <init-hook>
        <test-suite name="init">
          <test-suite-call testfile="${open.dir}/luciddb/test/sql/tinit.xml">
            <test-suite-modifier value="sfdc"/>
          </test-suite-call>
        </test-suite>
      </init-hook>

      <test name="sanity-flatfile" nameOverride="true">
        <junit-sql file="${open.dir}/luciddb/test/sql/sfdc/gen/flatfile.sql"/>
      </test>

      <cleanup-hook>
        <test-suite name="cleanup">
          <test-suite-call testfile="${open.dir}/luciddb/test/sql/tdone.xml"/>
        </test-suite>
      </cleanup-hook>

    </test-suite>
  </target>
</project>
