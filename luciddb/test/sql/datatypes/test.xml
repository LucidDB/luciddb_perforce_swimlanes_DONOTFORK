<project name="tch" default="simple-test">
  <target name="simple-test">
    <test-suite name="simple-test">

      <init-hook>
        <ant target="restoreCatalog"/>
      </init-hook>

      <test name="creschema">
        <junit-sql file="${open.dir}/luciddb/test/sql/datatypes/gen/${config.prop}/creschema.sql"/>
      </test>

      <test name="importschema" requiresRun="creschema">
        <junit-sql file="${open.dir}/luciddb/test/sql/datatypes/gen/${config.prop}/foreigntabl.sql"/>
      </test>

      <test name="tableload" requiresRun="importschema">
        <junit-sql file="${open.dir}/luciddb/test/sql/datatypes/gen/${config.prop}/tblload.sql"/>
      </test>

      <test name="types">
        <test-metadata> 
          <knownFailure value="true"/>
        </test-metadata>
        <junit-sql file="${open.dir}/luciddb/test/sql/datatypes/gen/${config.prop}/metadatatypes.sql"/>
      </test>

    </test-suite>
  </target>
</project>
