<project name="tch" default="simple-test">
  <target name="simple-test">
    <test-suite testunit="simple-test">
      
      <init-hook>
        <test name="restoreCatalog" testunit="init-test">
          <ant-task>
            <ant target="restoreCatalog"/>
          </ant-task>
        </test>
      </init-hook>

      <test name="udfInvocation">
        <test-parameter name="sql-file" value="%{open.dir}/luciddb/test/sql/udr/udf/udfInvocation.sql"/>
        <javatest testclass="com.lucidera.luciddb.test.bh.SqlTest"/>
      </test>

      <test name="sqlUdfTest">
        <test-parameter name="sql-file" value="%{open.dir}/luciddb/test/sql/udr/udf/sqlUdfTest.sql"/>
