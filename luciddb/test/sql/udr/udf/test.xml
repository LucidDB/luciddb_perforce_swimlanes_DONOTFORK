<project name="tch" default="simple-test">
  <target name="simple-test">
    <test-suite testunit="simple-test">
      
      <init-hook>
        <test name="restoreCatalog" testunit="init-test">
          <ant-task>
            <ant target="restoreCatalog"/>
          </ant-task>
        </test>
      </init-hook>

      <test name="cr_source">
        <test-parameter name="sql-file" value="cr_source.sql"/>
        <javatest testclass="com.lucidera.luciddb.test.bh.SqlTest"/>
      </test>

      <test name="udfTests" requiresRun="cr_source">
        <test-parameter name="sql-file" value="udfInvocation.sql"/>
        <javatest testclass="com.lucidera.luciddb.test.bh.SqlTest"/>
      </test>

      <test name="charReplace" requiresRun="cr_source">
        <test-parameter name="sql-file" value="char_replace.sql"/>
        <javatest testclass="com.lucidera.luciddb.test.bh.SqlTest"/>
      </test>

      <test name="cleanPhone" requiresRun="cr_source">
        <test-parameter name="sql-file" value="clean_phone.sql"/>
        <javatest testclass="com.lucidera.luciddb.test.bh.SqlTest"/>
      </test>

      <test name="fymonth" requiresRun="cr_source">
        <test-parameter name="sql-file" value="fymonth.sql"/>
        <javatest testclass="com.lucidera.luciddb.test.bh.SqlTest"/>
      </test>

    </test-suite>
  </target>
</project>
