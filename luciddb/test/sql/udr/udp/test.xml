<project name="bh" default="udp">
  <target name="udp">
    <test-suite name="udp">

      <init-hook>
        <test-suite name="init">
          <test-suite-call testfile="${open.dir}/luciddb/test/sql/tinit.xml">
          </test-suite-call>
        </test-suite>
        <ant dir="${open.dir}/luciddb/test/sql/udr/udp" target="copy-csv"/>  
        <ant dir="${open.dir}/luciddb/test/sql/udr/udp" target="clean-exp"/>
      </init-hook>

      <test name="crSource">
        <junit-sql file="${open.dir}/luciddb/test/sql/udr/udp/cr_source.sql"/>
      </test>

      <test name="grantSelectForSchema">
        <junit-sql file="${open.dir}/luciddb/test/sql/udr/udp/grant_select_for_schema.sql"/>
      </test>

      <test name="exportLocalSchema" requiresSuccess="crSource">
        <junit-sql file="${open.dir}/luciddb/test/sql/udr/udp/export_local_schema.sql"/>
      </test>

      <test name="exportForeignSchema" requiresSuccess="crSource">
        <junit-sql file="${open.dir}/luciddb/test/sql/udr/udp/export_foreign_schema.sql"/>
      </test>

      <test name="misc" requiresSuccess="crSource">
        <junit-sql file="${open.dir}/luciddb/test/sql/udr/udp/misc.sql"/>
      </test>

      <test name="exportLocalInc" requiresSuccess="crSource">
        <!-- TODO: FRG-172, FRG-175, FRG-176 -->
        <test-metadata>
          <knownFailure>true</knownFailure>
        </test-metadata>
        <junit-sql file="${open.dir}/luciddb/test/sql/udr/udp/export_local_incremental.sql"/>
      </test>

      <test name="exportForeignInc" requiresRun="exportLocalInc">
        <!-- TODO: FRG-176 -->
        <test-metadata>
          <knownFailure>true</knownFailure>
        </test-metadata>
        <junit-sql file="${open.dir}/luciddb/test/sql/udr/udp/export_foreign_incremental.sql"/>
      </test>

      <test name="exportMergedSchemas" requiresSuccess="crSource">
        <!-- TODO: FRG-182 -->
        <test-metadata>
          <knownFailure>true</knownFailure>
        </test-metadata>
        <junit-sql file="${open.dir}/luciddb/test/sql/udr/udp/export_merged_schemas.sql"/>
      </test>

      <test name="bcpTest" requiresSuccess="exportLocalSchema">
        <!-- TODO: LDB-127 -->
        <test-metadata>
          <knownFailure>true</knownFailure>
        </test-metadata>
        <junit-sql file="${open.dir}/luciddb/test/sql/udr/udp/bcpTest.sql"/>
      </test>

      <cleanup-hook>
        <test-suite name="cleanup">
          <test-suite-call testfile="${open.dir}/luciddb/test/sql/tdone.xml"/>
        </test-suite>
      </cleanup-hook>

    </test-suite>
  </target>
</project>
