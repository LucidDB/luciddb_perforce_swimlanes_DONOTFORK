<project name="bh" default="udx">
  <target name="udx">
    <test-suite name="udx">
      
      <init-hook>
        <test-suite name="init">
          <test-suite-call testfile="${open.dir}/luciddb/test/sql/tinit.xml">
            <test-suite-modifier value="udx"/>
          </test-suite-call>
        </test-suite>
      </init-hook>

      <test name="timeDimension">
        <junit-sql file="${open.dir}/luciddb/test/sql/udr/udx/timeDimension.sql"/>
      </test>

      <test name="viewTest">
        <junit-sql file="${open.dir}/luciddb/test/sql/udr/udx/viewTest.sql"/>
      </test>

      <test name="cursorTests">
        <!-- TODO: FRG-141, test also commented out in file so locking -->
        <!-- problem doesn't endure -->
        <test-metadata>
          <knownFailure value="true"/>
        </test-metadata>
        <junit-sql file="${open.dir}/luciddb/test/sql/udr/udx/cursorTests.sql"/>
      </test>

      <cleanup-hook>
        <test-suite name="cleanup">
          <test-suite-call testfile="${open.dir}/luciddb/test/sql/tdone.xml">
            <test-suite-modifier value="udx"/>
          </test-suite-call>
        </test-suite>
      </cleanup-hook>

    </test-suite>
  </target>
</project>
