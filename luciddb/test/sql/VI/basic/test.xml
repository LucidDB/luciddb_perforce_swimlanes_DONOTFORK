<project name="bh" default="basic-test">
  <target name="basic-test">
    <test-suite testunit="basic-test">

      <init-hook>
        <test name="restoreCatalog" testunit="basic-init-test">
          <ant-task>
            <ant target="restoreCatalog"/>
          </ant-task>
        </test>
      </init-hook>

      <test name="viload">
        <test-parameter name="sql-file" value="%{open.dir}/luciddb/test/sql/VI/basic/gen/${config.prop}/viload.sql"/>
        <javatest testclass="com.lucidera.luciddb.test.bh.SqlTest"/>
      </test>
      
    </test-suite>
  </target>
</project>
