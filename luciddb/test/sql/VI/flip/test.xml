<project name="bh" default="flip-test">
  <target name="flip-test">
    <test-suite testunit="flip-test">

      <init-hook>
        <test name="restoreCatalog" testunit="flip-init-test">
          <ant-task>
            <ant target="restoreCatalog"/>
          </ant-task>
        </test>
      </init-hook>

      <test name="flip100">
        <test-parameter name="sql-file" value="%{open.dir}/luciddb/test/sql/VI/flip/gen/${config.prop}/flip100.sql"/>
        <javatest testclass="com.lucidera.luciddb.test.bh.SqlTest"/>
      </test>
      
      <test name="flip10k">
        <test-parameter name="sql-file" value="%{open.dir}/luciddb/test/sql/VI/flip/gen/${config.prop}/flip10k.sql"/>
        <javatest testclass="com.lucidera.luciddb.test.bh.SqlTest"/>
      </test>
      
      <test name="delete">
        <test-parameter name="sql-file" value="%{open.dir}/luciddb/test/sql/VI/flip/gen/${config.prop}/del_k2_2.sql"/>
        <javatest testclass="com.lucidera.luciddb.test.bh.SqlTest"/>
      </test>

    </test-suite>
  </target>
</project>
