<project name="bh" default="simple-test">
  <target name="simple-test">
    <test-suite testunit="simple-test">

      <init-hook>
        <test name="restoreCatalog" testunit="pop-init-test">
          <ant-task>
            <ant target="restoreCatalog"/>
          </ant-task>
        </test>
      </init-hook>

      <test name="createIdx">
        <test-parameter name="sql-file" value="%{open.dir}/luciddb/test/sql/VI/populate/gen/${config.prop}/createIdx.sql"/>
        <javatest testclass="com.lucidera.luciddb.test.bh.SqlTest"/>
      </test>
      
      <test name="createIdx2">
        <test-parameter name="sql-file" value="%{open.dir}/luciddb/test/sql/VI/populate/gen/${config.prop}/createidx2.sql"/>
        <javatest testclass="com.lucidera.luciddb.test.bh.SqlTest"/>
      </test>

    </test-suite>
  </target>
</project>
