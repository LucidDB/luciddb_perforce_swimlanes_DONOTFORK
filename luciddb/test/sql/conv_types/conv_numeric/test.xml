<project name="tch" default="simple-test">
  <target name="simple-test">
    <test-suite testunit="simple-test">
      
      <init-hook>
        <test name="restoreCatalog" testunit="init-test">
          <ant-task>
            <ant target="restoreCatalog"/>
          </ant-task>
        </test>
      </init-hook>

      <test name="createsource">
        <test-parameter name="jdbc-driver" 
          value="com.lucidera.jdbc.LucidDbLocalDriver"/>
        <test-parameter name="sql-file" value="cr_source.sql"/>
        <javatest testclass="com.lucidera.luciddb.test.bh.SqlTest"/>
      </test>

      <test name="tinyint" requiresRun="createsource">
        <test-parameter name="jdbc-driver" 
          value="com.lucidera.jdbc.LucidDbLocalDriver"/>
        <test-parameter name="sql-file" value="tinyint_load.sql"/>
        <javatest testclass="com.lucidera.luciddb.test.bh.SqlTest"/>
      </test>

