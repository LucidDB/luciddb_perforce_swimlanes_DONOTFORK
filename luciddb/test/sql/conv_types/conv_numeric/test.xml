<project name="bh" default="convnumeric-test">
  <target name="convnumeric-test">
    <test-suite testunit="convnumeric-test">
      
      <init-hook>
        <test name="restoreCatalog" testunit="convnumeric-init-test">
          <ant-task>
            <ant target="restoreCatalog"/>
          </ant-task>
        </test>
      </init-hook>

      <test name="createsource">
        <test-parameter name="sql-file" value="%{open.dir}/luciddb/test/sql/conv_types/conv_numeric/cr_source.sql"/>
        <javatest testclass="com.lucidera.luciddb.test.bh.SqlTest"/>
      </test>

      <test name="tinyint" requiresRun="createsource">
        <test-parameter name="sql-file" value="%{open.dir}/luciddb/test/sql/conv_types/conv_numeric/tinyint_load.sql"/>
        <javatest testclass="com.lucidera.luciddb.test.bh.SqlTest"/>
      </test>

      <test name="smallint" requiresRun="createsource">
        <test-parameter name="sql-file" value="%{open.dir}/luciddb/test/sql/conv_types/conv_numeric/smallint_load.sql"/>
        <javatest testclass="com.lucidera.luciddb.test.bh.SqlTest"/>
      </test>

      <test name="integer" requiresRun="createsource">
        <test-parameter name="sql-file" value="%{open.dir}/luciddb/test/sql/conv_types/conv_numeric/integer_load.sql"/>
        <javatest testclass="com.lucidera.luciddb.test.bh.SqlTest"/>
      </test>

      <test name="bigint" requiresRun="createsource">
        <test-parameter name="sql-file" value="%{open.dir}/luciddb/test/sql/conv_types/conv_numeric/bigint_load.sql"/>
        <javatest testclass="com.lucidera.luciddb.test.bh.SqlTest"/>
      </test>

      <test name="decimal" requiresRun="createsource">
        <test-parameter name="sql-file" value="%{open.dir}/luciddb/test/sql/conv_types/conv_numeric/decimal_load.sql"/>
        <javatest testclass="com.lucidera.luciddb.test.bh.SqlTest"/>
      </test>

      <test name="numeric" requiresRun="createsource">
        <test-parameter name="sql-file" value="%{open.dir}/luciddb/test/sql/conv_types/conv_numeric/numeric_load.sql"/>
