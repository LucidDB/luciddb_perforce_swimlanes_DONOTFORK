      <test name="real" requiresRun="createsource">
        <test-parameter name="sql-file" value="%{open.dir}/luciddb/test/sql/conv_types/conv_numeric/real_load.sql"/>
        <javatest testclass="com.lucidera.luciddb.test.bh.SqlTest"/>
      </test>


    </test-suite>
  </target>
</project>
