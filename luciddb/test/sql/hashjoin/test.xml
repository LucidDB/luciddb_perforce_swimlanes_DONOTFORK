      <init-hook>
        <test-suite name="init">
          <test-suite-call testfile="${open.dir}/luciddb/test/sql/tinit.xml"/>
        </test-suite>
      </init-hook>

      <test name="hhjoin">
        <junit-sql file="${open.dir}/luciddb/test/sql/hashjoin/hhjoin.sql"/>
