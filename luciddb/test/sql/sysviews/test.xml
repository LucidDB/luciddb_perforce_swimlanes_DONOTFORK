<project name="bh" default="sysviews">
  <target name="sysviews">
    <test-suite name="sysviews">

      <init-hook>
        <test-suite name="init">
          <test-suite-call testfile="${open.dir}/luciddb/test/sql/tinit.xml">
            <test-suite-modifier value="sysviews"/>
          </test-suite-call>
        </test-suite>
        <ant dir="${open.dir}/luciddb/test/sql/sysviews" target="copy-csv"/>
      </init-hook>

      <test name="dbaViews">
        <junit-sql file="${open.dir}/luciddb/test/sql/sysviews/dbaViews.sql"/>
      </test>

      <cleanup-hook>
        <test-suite name="cleanup">
          <test-suite-call testfile="${open.dir}/luciddb/test/sql/tdone.xml">
            <test-suite-modifier value="sysviews"/>
          </test-suite-call>
        </test-suite>
      </cleanup-hook>

    </test-suite>
  </target>
</project>
