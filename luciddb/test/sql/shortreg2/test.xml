      <test name="productsload" requiresRun="creschema">
        <test-parameter name="jdbc-driver" 
          value="com.lucidera.jdbc.LucidDbLocalDriver"/>
        <test-parameter name="sql-file" value="gen/productsload.sql"/>
        <javatest testclass="com.lucidera.luciddb.test.bh.SqlTest"/>
      </test>

      <test name="salesload" requiresRun="creschema">
        <test-parameter name="jdbc-driver" 
