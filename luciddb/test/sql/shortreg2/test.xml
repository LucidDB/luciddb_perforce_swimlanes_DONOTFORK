<project name="bh" default="simple-test">
  <target name="simple-test">
    <test-suite name="simple-test">
      
      <init-hook>
        <ant target="restoreCatalog"/>
      </init-hook>

      <test name="creschema">
        <junit-sql file="${open.dir}/luciddb/test/sql/shortreg2/gen/${config.prop}/creschema.sql"/>
      </test>

      <test name="locationload" requiresSuccess="creschema">
        <junit-sql file="${open.dir}/luciddb/test/sql/shortreg2/gen/${config.prop}/locationload.sql"/>
      </test>

      <test name="deptload" requiresSuccess="creschema">
        <junit-sql file="${open.dir}/luciddb/test/sql/shortreg2/gen/${config.prop}/deptload.sql"/>
      </test>

      <test name="empload" requiresSuccess="creschema">
        <junit-sql file="${open.dir}/luciddb/test/sql/shortreg2/gen/${config.prop}/empload.sql"/>
      </test>

      <test name="customersload" requiresSuccess="creschema">
        <junit-sql file="${open.dir}/luciddb/test/sql/shortreg2/gen/${config.prop}/customersload.sql"/>
      </test>

      <test name="productsload" requiresSuccess="creschema">
        <junit-sql file="${open.dir}/luciddb/test/sql/shortreg2/gen/${config.prop}/productsload.sql"/>
      </test>

      <test name="salesload" requiresSuccess="creschema">
        <junit-sql file="${open.dir}/luciddb/test/sql/shortreg2/gen/${config.prop}/salesload.sql"/>
      </test>

      <test-suite-call testfile="test-queries.xml"/>

    </test-suite>
  </target>
</project>
