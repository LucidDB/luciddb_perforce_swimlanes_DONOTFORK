<project name="tch" default="simple-test">
  <target name="simple-test">
    <test-suite testunit="simple-test">
      
      <init-hook>
        <test name="restoreCatalog" testunit="init-test">
          <ant-task>
            <ant target="restoreCatalog"/>
          </ant-task>
        </test>
      </init-hook>

      <test name="creschema">
        <test-parameter name="jdbc-driver" 
          value="com.lucidera.jdbc.LucidDbLocalDriver"/>
        <test-parameter name="sql-file" value="gen/creschema.sql"/>
        <javatest testclass="com.lucidera.luciddb.test.bh.SqlTest"/>
      </test>

      <test name="locationload" requiresRun="creschema">
        <test-parameter name="jdbc-driver" 
          value="com.lucidera.jdbc.LucidDbLocalDriver"/>
        <test-parameter name="sql-file" value="gen/locationload.sql"/>
        <javatest testclass="com.lucidera.luciddb.test.bh.SqlTest"/>
      </test>

      <test name="deptload" requiresRun="creschema">
        <test-parameter name="jdbc-driver" 
          value="com.lucidera.jdbc.LucidDbLocalDriver"/>
        <test-parameter name="sql-file" value="gen/deptload.sql"/>
