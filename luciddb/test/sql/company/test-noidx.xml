<project name="bh" default="noidx-test">
  <target name="noidx-test">
    <test-suite testunit="noidx-test">
      
      <test-metadata>
        <knownFailure value="true"/>
      </test-metadata>

      <init-hook>
        <test name="restoreCatalog" testunit="init-test">
          <ant-task>
            <ant target="restoreCatalog"/>
          </ant-task>
        </test>
      </init-hook>

      <!-- Create schema (without indexes), load data, then run queries -->

      <test name="create">
        <test-metadata>
          <knownFailure value="false"/>
        </test-metadata>
        <test-parameter name="sql-file" value="%{open.dir}/luciddb/test/sql/company/gen/%{config.prop}/create.sql"/>
        <javatest testclass="com.lucidera.luciddb.test.bh.SqlTest"/>
      </test>

      <test name="download" requiresSuccess="create">
        <test-metadata>
          <knownFailure value="false"/>
        </test-metadata>
        <test-parameter name="sql-file" value="%{open.dir}/luciddb/test/sql/company/gen/%{config.prop}/download.sql"/>
