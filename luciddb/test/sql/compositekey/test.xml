<project name="bh" default="simple-test">
  <target name="simple-test">
    <test-suite name="simple-test">

      <init-hook>
        <ant target="restoreCatalog"/>
      </init-hook>

      <test name="compkeyins">
        <junit-sql file="${open.dir}/luciddb/test/sql/compositekey/gen/${config.prop}/compkeyins.sql"/>
      </test>

      <test name="compkeyqueries" requiresSuccess="compkeyins">
        <junit-sql file="${open.dir}/luciddb/test/sql/compositekey/gen/${config.prop}/compkeyqueries.sql"/>
      </test>

    </test-suite>
  </target>
</project>
