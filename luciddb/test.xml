<project name="bh" default="luciddb">
  <target name="luciddb">
    <test-suite name="luciddb">

      <init-hook>
        <test-suite name="init">
          <test-suite-call testfile="${open.dir}/luciddb/test/sql/tinit.xml">
            <test-suite-modifier value="luciddb"/>
          </test-suite-call>
        </test-suite>
      </init-hook>

      <test-suite-call testfile="test/sql/txn/test.xml"/>

      <test-suite-call testfile="test/sql/shortreg/sanity.xml">
        <test-suite-modifier value="flatfile"/>
        <property name="foreign.db" value="flatfile"/>
      </test-suite-call>

      <test-suite-call testfile="test/sql/udr/udf/test.xml"/>
      <test-suite-call testfile="test/sql/udr/udx/test.xml"/>
      <test-suite-call testfile="test/sql/concurrency/test.xml"/>
      <test-suite-call testfile="test/sql/VI/tbs/tbs100test.xml"/>

      <cleanup-hook>
        <test-suite name="cleanup">
          <test-suite-call testfile="${open.dir}/luciddb/test/sql/tdone.xml">
            <test-suite-modifier value="luciddb"/>
          </test-suite-call>
        </test-suite>
      </cleanup-hook>

    </test-suite>
  </target>
</project>

