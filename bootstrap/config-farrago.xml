<!-- This file is an XML fragment with the -->
<!-- CruiseControl config for Farrago -->

<project name="farrago&configSuffix;">
	<labelincrementer defaultLabel="farrago.1"/>

	<!-- Bootstrappers are run with every build before mod checks -->
	<bootstrappers>
		<!-- currentbuildstatusbootstrapper file="logs/farrago/currentbuildstatus.txt"/ -->
		<p4bootstrapper port="&open_p4port;" client="&open_p4client;" user="&open_p4user;" view="&open_root;/bootstrap/..."/>
	</bootstrappers>

    <listeners>
        <currentbuildstatuslistener file="logs/farrago/currentbuildstatus.txt"/>
        <currentbuildstatuslistener file="&open_default.build.home;/../web/logs/farrago&configSuffix;/currentbuildstatus.txt"/>
    </listeners>

	<!-- Defines where cruise looks for changes, to decide whether to run the build -->
	<modificationset quietperiod="300">
		<p4 port="&open_p4port;" client="&open_p4client;" user="&open_p4user;" view="&open_root;/farrago/..."/>
		<p4 port="&open_p4port;" client="&open_p4client;" user="&open_p4user;" view="&open_root;/fennel/..."/>
		<p4 port="&open_p4port;" client="&open_p4client;" user="&open_p4user;" view="&open_root;/thirdparty/..."/>
	</modificationset>

	<!-- Configures the actual build loop, how often and which build file/target -->
	<schedule interval="&build_interval;">
		<ant buildfile="&open_default.build.home;/bootstrap/build-farrago.xml" uselogger="true" usedebug="false" antscript="&ant;" target="integration-build-and-test">
            <property name="p4.port" value="&open_p4port;"/>
            <property name="p4.user" value="&open_p4user;"/>
            <property name="p4.client" value="&open_p4client;"/>

            <property name="default.build.home" value="&open_default.build.home;"/>
            <property name="integration.build.home" value="&open_integration.build.home;"/>
            <property name="open.build.home" value="&open_integration.build.home;"/>

		    <property name="open_root" value="&open_root;"/>
		</ant>
	</schedule>

	<!-- directory to write build logs to -->
	<log dir="logs/farrago">
		<merge dir="&open_integration.build.home;/farrago/testlog"/>
	</log>

	<!-- Publishers are run *after* a build completes -->
	<publishers>
		<!-- currentbuildstatuspublisher file="logs/farrago/currentbuildstatus.txt"/ -->

		<artifactspublisher dir="&open_integration.build.home;/farrago/trace" dest="artifacts/farrago&configSuffix;" subdirectory="trace"/>
		<artifactspublisher dir="&open_integration.build.home;/farrago/testlog" dest="artifacts/farrago&configSuffix;" subdirectory="testlog"/>
		<artifactspublisher dir="&open_integration.build.home;/farrago/unitsql" dest="artifacts/farrago&configSuffix;" subdirectory="unitsql"/>
		<artifactspublisher dir="&open_integration.build.home;/farrago/initsql" dest="artifacts/farrago&configSuffix;" subdirectory="initsql"/>
		<artifactspublisher dir="&open_integration.build.home;/farrago/regressionsql" dest="artifacts/farrago&configSuffix;" subdirectory="regressionsql"/>

                       <!-- fennel artifacts -->
		<artifactspublisher dir="&open_integration.build.home;/fennel/trace" dest="artifacts/farrago&configSuffix;" subdirectory="fennel"/>

		<!-- sync up artifacts on jsp machine: CC's scp would copy everything -->
		<execute command="&rsync_cmd; artifacts/farrago&configSuffix; &rsync_dest;"/>

		<scp sourcedir="logs/farrago"
			     targetuser="&scp_user;"
			     targethost="&scp_host;"
			     targetseparator="&scp_filesep;"
			     targetdir="web/logs/farrago&configSuffix;"
                             options="&scp_options;"/>
			
		<scp sourcedir="logs/farrago"
			     file="currentbuildstatus.txt"
			     targetuser="&scp_user;"
			     targethost="&scp_host;"
			     targetseparator="&scp_filesep;"
			     targetdir="web/logs/farrago&configSuffix;"
                             options="&scp_options;"/> 
			
		<email buildresultsurl="&buildresultsbase;/farrago&configSuffix;"
			       mailhost="&mailhost;"
			       reportsuccess="&reportsuccess;"
			       returnname="&returnname;"
			       returnaddress="&returnaddress;"
			       skipusers="&skipusers;"
			       spamwhilebroken="&spamwhilebroken;"
			       subjectprefix="&subjectprefix;">
			<failure address="&failureaddress;"
				         reportWhenFixed="&reportwhenfixed;"/>
                                <propertiesmapper file="&emailmapper;"/>
		</email>
	</publishers>
</project>

